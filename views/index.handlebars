{{> header }}

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>InfoQ</p>
  </div>
</div>
<div class="container-fluid">
  <div class="row article-container">
    <div class="row w-100">
      {{#each articles}}
      <div class='card m-5' data-_id={{_id}} style="width:300px">
        <div class="card-header">
          <img class="card-img-top mt-3 mx-auto d-block" src={{image}} style="width: 125px; height: 150px" />
        </div>
        <div class="card-body">
          <h5>
            <a class='card-title article-link' target='_blank' rel='noopener noreferrer' href={{link}}>{{title}}</a>
          </h5>
        </div>
        <div class="card-footer border-secondary text-left p-1 b-0 m-0">
          <a class='btn btn-success save float-right m-2'>Save Article</a>
        </div>
      </div>
      {{else}}
      <div class="w-100 alert alert-warning text-center">
        <h4>Uh Oh. Looks like we don't have any new articles.</h4>
      </div>
      <div class="card w-100">
        <div class="card-header text-center">
          <h3>What would you like to do?</h3>
        </div>
        <div class="card-body text-center">
          <h4><a class="scrape-new">Try Scraping New Articles</a></h4>
          <h4><a href="/saved">Go to Saved Articles</a></h4>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

{{> footer }}

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script src="/assets/javascript/index.js"></script>