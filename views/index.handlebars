<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="/">Mongo Scraper</a>
  <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
    aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/">Home
          <span class="sr-only">(current)</span>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/saved">Saved Articles</a>
      </li>
      <li class="nav-item">
        <a class="btn btn-danger scrape-new">SCRAPE NEW ARTICLES!</a>
      </li>
      <li class="nav-item">
        <a class="btn btn-danger clear">CLEAR ARTICLES!</a>
      </li>
    </ul>
  </div>
</nav>

<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Mongo Scraper</h1>
    <p>InfoQ</p>
  </div>
</div>
<div class="container-fluid">
  <div class="row article-container">
    <div class="row w-100">
      {{#each articles}}
      <div class='card m-5' data-_id={{_id}} style="width:300px">
        <div class="card-header">
          <img class="card-img-top mt-3 mx-auto d-block" src={{image}} style="width: 125px; height: 150px" />
        </div>
        <div class="card-body">
          <h5>
            <a class='card-title article-link' target='_blank' rel='noopener noreferrer' href={{link}}>{{title}}</a>
          </h5>
        </div>
        <div class="card-footer border-secondary text-left p-1 b-0 m-0">
          <a class='btn btn-success save float-right m-2'>Save Article</a>
        </div>
      </div>
      {{else}}
      <div class="w-100 alert alert-warning text-center">
        <h4>Uh Oh. Looks like we don't have any new articles.</h4>
      </div>
      <div class="card w-100">
        <div class="card-header text-center">
          <h3>What would you like to do?</h3>
        </div>
        <div class="card-body text-center">
          <h4><a class="scrape-new">Try Scraping New Articles</a></h4>
          <h4><a href="/saved">Go to Saved Articles</a></h4>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>

<footer class="footer">
  <div class="container">
    <p>InfoQ Mongo Scraper</p>
  </div>
</footer>

